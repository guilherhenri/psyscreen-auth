{
  "name": "@psycreen/auth",
  "description": "Event-driven authentication microservice built with NestJS, Kafka, and PostgreSQL",
  "scripts": {
    "build": "nest build",
    "start": "dotenv -- nest start",
    "start:dev": "dotenv -- nest start --watch",
    "start:debug": "dotenv -- nest start --debug --watch",
    "start:prod": "node dist/main",
    "typeorm": "tsx ./node_modules/typeorm/cli.js -d src/infra/database/data-source.ts",
    "migration:generate": "dotenv -- npm run typeorm -- migration:generate",
    "migration:run": "dotenv -- npm run typeorm -- migration:run",
    "migration:revert": "dotenv -- npm run typeorm -- migration:revert",
    "migration:show": "dotenv -- npm run typeorm -- migration:show",
    "check": "tsc --noEmit",
    "lint": "eslint --fix",
    "format": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:integration": "jest --config jest.integration.config.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.22.0",
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/microservices": "^11.1.9",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/typeorm": "^11.0.0",
    "bcryptjs": "^3.0.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "jose": "^6.1.3",
    "kafkajs": "^2.2.4",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "@psyscreen/contracts": "^0.3.3",
    "typeorm": "^0.3.28",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@psyscreen/config": "^0.2.3",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@testcontainers/redpanda": "^11.10.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.1",
    "jest": "^30.2.0",
    "prettier": "^3.7.4",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "prettier": "@psyscreen/config/prettier/node"
}
